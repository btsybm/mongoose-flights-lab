<%- include('../partials/head') %>
<link rel="stylesheet" href="/stylesheets/destinations/new.css" />
<%- include('../partials/nav') %>

<main>
	<h1><%= title %></h1>
  <p>Please check that the destination is not in the dropdown
    <select>
      <% destinations.forEach(function(destination) { %>
        <option><%= destination.airport %></option>
      <% }) %>
    </select>
  </p>
  <form id="add-destination-form" action="/destinations" method="POST">
    <label for="airport">New Destination:</label>
    <input type="text" name="airport" id="destination-input">
    <button type="submit">Add Destination</button>
  </form>
</main>

<%- include('../partials/footer') %>