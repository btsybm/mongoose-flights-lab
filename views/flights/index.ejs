<%- include('../partials/head.ejs') %> 
<link rel='stylesheet' href='/stylesheets/flights/index.css' />
</head>
<%- include("../partials/nav.ejs") %> 

<main>
  <h1><%= title %></h1>
  <table class='table'>
    <thead>
      <tr>
        <th>Airline</th>
        <th>Airport</th>
        <th>Flight Number</th>
        <th>Departs:</th>
        <th>Details:</th>
      </tr>
    </thead>
    <tbody >
      <% flights.forEach(f => { %>
        <tr>
          <td><%= f.airline %></td>
          <td><%= f.airport %></td>
          <td><%= f.flightNo %></td>
          <td><%= f.departs %></td>
          <td><a href="/flights/<%= f._id %> ">Details</a></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</main>
<%- include('../partials/footer') %>
